<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="login" namespace="/login" extends="struts-default">
        <action name="nuevo" class="pe.edu.cibertec.gch.programa.action.LoginAction" method="nuevo" >
            <result>/view/login/nuevo.jsp</result>
        </action>
        <action name="registrar" class="pe.edu.cibertec.gch.programa.action.LoginAction" method="registrar" >
            <result name="success" type="redirectAction">
                <param name="actionName">nuevo</param>
                <param name="namespace">/login</param>
                <param name="mensaje">${mensaje}</param>
            </result>
            <result name="input">/view/login/nuevo.jsp</result>
        </action>
    </package>
</struts>

