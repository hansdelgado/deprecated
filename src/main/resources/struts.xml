<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Mensajes de depuracion visibles -->
    <constant name="struts.devMode" value="true" />
    <!-- Recarga de configuraciones ante modificaciones -->
    <constant name="struts.configuration.xml.reload" value="value" />
    <!--Cambiar la extension .action-->
    <constant name="struts.action.extension" value="html" />
    <!--establecer el recurso i18n global-->   
    <constant name="struts.custom.i18n.resources" value="global-messages" /> 	
    <!--retirando marcado de tablas de Struts 2-->
    <constant name="struts.ui.theme" value="simple" />
    <!-- Inclusion de paquetes -->
    <include file="login.xml"  />
    <include file="programa.xml"  />
</struts>
