<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    
    <constant name="struts.action.extension" value="html"/> 
    <constant name="struts.devMode" value="true" />
    
    <package name="default" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
        <action name="agregarHorario" class="pe.edu.cibertec.gch.actions.HorarioAction" method="inicializarRegistro">
            <result>/view/horario/registro.jsp</result>
        </action>
        <action name="guardarHorario" class="pe.edu.cibertec.gch.actions.HorarioAction" method="guardar">
            <result type="redirectAction">listarHorarios</result>
            <result name="input">/view/horario/registro.jsp</result>
        </action>
        <action name="listarHorarios" class="pe.edu.cibertec.gch.actions.HorarioAction" method="listar">
            <result>/view/horario/index.jsp</result>
        </action>
        <action name="buscarHorarios" class="pe.edu.cibertec.gch.actions.HorarioAction" method="buscar">
            <result>/view/horario/index.jsp</result>
        </action>
        <action name="editarHorario" class="pe.edu.cibertec.gch.actions.HorarioAction" method="inicializarModificar">
            <result>/view/horario/registro.jsp</result>
        </action>
        <action name="eliminarHorario" class="pe.edu.cibertec.gch.actions.HorarioAction" method="eliminar">
            <result type="redirectAction">listarHorarios</result>
        </action>
        <!--<action name="modificarHorario" class="pe.edu.cibertec.gch.actions.HorarioAction" method="modificar">
            <result type="redirectAction">listarHorarios</result>
            <result name="input">/view/horario/modificar.jsp</result>
        </action>-->
    </package>

</struts>