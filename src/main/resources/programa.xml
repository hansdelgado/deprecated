<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="programa" namespace="/" extends="struts-default">
        
        <action name="listarProgramas" class="pe.edu.cibertec.gch.web.servlets.programa.action.Listar" >
            <result>/view/programa/index.jsp</result>
        </action>
        
        <action name="irRegistroPrograma" >
            <result>/view/programa/registro.jsp</result>
        </action>
        
        <action name="buscarProgramas" class="pe.edu.cibertec.gch.web.servlets.programa.action.Buscar" >
            <!--se hace uso del interceptor validation ver el archivo : Buscar-validation.xml --> 
            <result>/view/programa/index.jsp</result>
            <result name="input">/view/programa/index.jsp</result>
        </action>
        
        <action name="registrarPrograma" class="pe.edu.cibertec.gch.web.servlets.programa.action.Registrar" >
            
            <!-- *********************************************************************************
            * Redireccionamos a listarProgramas mediante redirect (no recomendado) 
            * <result name="success" type="redirect" >listarProgramas.action?mensaje=${mensaje}</result>
            ***************************************************************************************-->
            
            <!-- Redireccionamos a listarProgramas mediante redirectAction ( recomendado )-->
            <result name="success" type="redirectAction" >
                <param name="actionName">listarProgramas</param>
                <param name="namespace">/</param>
                <param name="mensaje">${mensaje}</param>
            </result>
            <result name="input">/view/programa/registro.jsp</result>
        </action>
        
        <action name="irEliminarPrograma" class="pe.edu.cibertec.gch.web.servlets.programa.action.Eliminar" >
            <!--Redireccionamos a listarProgramas mediante 'chain' --> 
            <result name="success" type="chain">listarProgramas</result>
        </action>
    </package>
</struts>

