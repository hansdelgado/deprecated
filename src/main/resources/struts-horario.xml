<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    
    <package name="horario" namespace="/horario" extends="struts-default">
        <result-types>  
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>
        <action name="registro" class="pe.edu.cibertec.gch.actions.HorarioAction" method="inicializarRegistro">
            <result type="tiles">registroHorario</result>
        </action>
        <action name="guardarHorario" class="pe.edu.cibertec.gch.actions.HorarioAction" method="guardar">
            <result type="redirectAction">listarHorarios</result>
            <result name="input" type="tiles">registroHorario</result>
        </action>
        <action name="listarHorarios" class="pe.edu.cibertec.gch.actions.HorarioAction" method="listar">
            <result type="tiles">indexHorario</result>
        </action>
        <action name="buscarHorarios" class="pe.edu.cibertec.gch.actions.HorarioAction" method="buscar">
            <result type="tiles">indexHorario</result>
        </action>
        <action name="editar" class="pe.edu.cibertec.gch.actions.HorarioAction" method="inicializarModificar">
            <result type="tiles">edicionHorario</result>
        </action>
        <action name="updateHorario" class="pe.edu.cibertec.gch.actions.HorarioAction" method="editar">
            <result type="redirectAction">listarHorarios</result>
            <result name="input" type="tiles">edicionHorario</result>
        </action>
        <action name="eliminarHorario" class="pe.edu.cibertec.gch.actions.HorarioAction" method="eliminar">
            <result type="redirectAction">listarHorarios</result>
        </action>
    </package>

</struts>